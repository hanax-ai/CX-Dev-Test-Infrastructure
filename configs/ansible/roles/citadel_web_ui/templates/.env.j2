# Application Configuration
NODE_ENV=production
PORT={{ app_port }}
HOST={{ app_host }}

# Site Configuration
WEBUI_NAME="{{ webui_config.site_name }}"
WEBUI_DESCRIPTION="{{ webui_config.site_description }}"
DEFAULT_USER_ROLE={{ webui_config.default_user_role }}
ENABLE_SIGNUP={{ webui_config.enable_signup | lower }}
ENABLE_LOGIN_FORM={{ webui_config.enable_login_form | lower }}

# API Gateway Configuration
API_BASE_URL={{ api_gateway.base_url }}
CHAT_ENDPOINT={{ api_gateway.endpoints.chat }}
RAG_ENDPOINT={{ api_gateway.endpoints.rag }}
AUTH_ENDPOINT={{ api_gateway.endpoints.auth }}
MODELS_ENDPOINT={{ api_gateway.endpoints.models }}

# Clerk Authentication
CLERK_FRONTEND_API={{ clerk_config.frontend_api }}
CLERK_PUBLISHABLE_KEY={{ clerk_config.publishable_key }}
CLERK_SECRET_KEY={{ clerk_config.secret_key }}
CLERK_JWT_KEY={{ clerk_config.jwt_key }}

# Database Configuration
DATABASE_HOST={{ database_config.postgresql.host }}
DATABASE_PORT={{ database_config.postgresql.port }}
DATABASE_NAME={{ database_config.postgresql.database }}
DATABASE_USER={{ database_config.postgresql.user }}
DATABASE_PASSWORD={{ vault_postgresql_web_password | default('changeme') }}

# Security
SESSION_SECRET={{ security.session_secret }}
CSRF_PROTECTION={{ security.csrf_protection | lower }}
SECURE_COOKIES={{ security.secure_cookies | lower }}

# Performance
MAX_REQUEST_SIZE={{ performance.max_request_size }}
TIMEOUT={{ performance.timeout }}
KEEP_ALIVE_TIMEOUT={{ performance.keep_alive_timeout }}
COMPRESSION={{ performance.compression | lower }}

# Feature Flags
ENABLE_RAG={{ features.enable_rag | lower }}
ENABLE_DOCUMENT_UPLOAD={{ features.enable_document_upload | lower }}
ENABLE_CONVERSATION_HISTORY={{ features.enable_conversation_history | lower }}
ENABLE_MODEL_SWITCHING={{ features.enable_model_switching | lower }}
ENABLE_ADMIN_PANEL={{ features.enable_admin_panel | lower }}

# Branding
PRIMARY_COLOR={{ branding.primary_color }}
SECONDARY_COLOR={{ branding.secondary_color }}
LOGO_URL={{ branding.logo_url }}
FAVICON_URL={{ branding.favicon_url }}
CUSTOM_CSS={{ branding.custom_css | lower }}
